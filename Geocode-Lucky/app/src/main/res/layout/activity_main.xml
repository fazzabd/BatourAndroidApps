<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:background="@color/colorAccent"
    android:paddingRight="16dp"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="id.web.twoh.placesapitutorial.MainActivity">
<ImageView
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:src="@drawable/logo"/>
    <Button
        android:id="@+id/bt_getLocation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="92dp"
        android:text="Get Location"
        android:background="@color/colorPrimary"
        android:textColor="#ddfffefe"
        android:textStyle="bold"/>

    <EditText
        android:layout_marginTop="5dp"
        android:background="@color/primary_material_light"
        android:id="@+id/et_alamat"
        android:hint="Nama Tempat"
        android:layout_below="@id/bt_getLocation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_marginTop="40dp"
        android:background="@color/primary_material_light"
        android:id="@+id/latitude"
        android:hint="Latitude"
        android:layout_below="@id/bt_getLocation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_marginTop="70dp"
        android:background="@color/primary_material_light"
        android:id="@+id/longitude"
        android:hint="Longitude"
        android:layout_below="@id/bt_getLocation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <Button
        android:layout_marginTop="75dp"
        android:id="@+id/bt_geoCoding"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/et_alamat"
        android:layout_centerHorizontal="true"
        android:text="Smart Geocode"
        android:background="@color/colorPrimary"
        android:textColor="#ddfffefe"
        android:textStyle="bold"/>

    <Button
        android:layout_marginTop="5dp"
        android:id="@+id/bt_ppicker"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/bt_geoCoding"
        android:layout_centerHorizontal="true"
        android:text="@string/place_picker"
        android:background="@color/colorPrimary"
        android:textColor="#ddfffefe"
        android:textStyle="bold"/>

    <TextView
        android:layout_marginTop="5dp"
        android:id="@+id/tv_place_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/bt_ppicker"
        android:background="@color/primary_material_light"
        android:text="Place name..." />

    <Button
        android:id="@+id/panggil"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"

        android:text="LOKASI TERDEKAT"
        android:background="@color/colorPrimary"
        android:textColor="#ddfffefe"
        android:textStyle="bold"/>

</RelativeLayout>
