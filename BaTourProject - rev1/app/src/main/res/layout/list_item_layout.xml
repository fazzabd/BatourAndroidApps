<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:background="#ddd"
        android:src="@drawable/kawahputih" />

    <TextView
        android:id="@+id/textView1"
        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="110dp"
        android:fontFamily="sans-serif"
        android:text="Kawah Putih"
        android:textSize="17dp" />

    <TextView
        android:id="@+id/textView1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="110dp"
        android:layout_marginTop="25dp"
        android:text="Jl. Raya Ciwidey Patengan Km 11"
        android:textSize="10dp" />

    <TextView
        android:id="@+id/textView1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="110dp"
        android:layout_marginTop="40dp"
        android:text="Kab. Bandung Barat"
        android:textSize="8dp" />
    <TextView
        android:id="@+id/textView1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="110dp"
        android:layout_marginTop="52dp"
        android:textColor="#09b709"
        android:textStyle="bold"
        android:text="Jam Buka 7.00-16.00"
        android:textSize="10dp" />

    <TextView
        android:id="@+id/textView1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/button"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="10dp"
        android:gravity="right"
        android:layout_marginRight="5dp"
        android:text="HTM:5000/org"
        android:textColor="#09b709"
        android:textSize="12dp" />

    <Button
        android:id="@+id/button_deskripsi"
        android:layout_width="160dp"
        android:layout_height="20dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="72dp"
        android:background="#0f730f"
        android:text="Baca Selengkapnya"
        android:textColor="#ddd"
        android:textSize="12dp" />


</RelativeLayout>